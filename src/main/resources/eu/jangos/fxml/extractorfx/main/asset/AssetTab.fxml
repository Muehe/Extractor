<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.ContextMenu?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="eu.jangos.extractorfx.gui.assets.AssetTabController">
    <children>
        <TextField fx:id="tfSearch" />
        <ListView fx:id="listView" prefHeight="676.0" prefWidth="200.0">
            <contextMenu>
                <ContextMenu>
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#onSelectedItemAction" text="Selected Item" />
                        <Menu mnemonicParsing="false" text="2D Rendering">
                            <items>
                                <Menu mnemonicParsing="false" text="Liquid rendering">
                                    <items>
                                        <MenuItem mnemonicParsing="false" text="Type" />
                                        <MenuItem mnemonicParsing="false" text="Fishable" />
                                        <MenuItem mnemonicParsing="false" text="Animated" />
                                        <MenuItem mnemonicParsing="false" text="Heightmap" />
                                    </items>
                                </Menu>
                                <Menu mnemonicParsing="false" text="Terrain rendering">
                                    <items>
                                        <MenuItem mnemonicParsing="false" text="Terrain" />
                                        <MenuItem mnemonicParsing="false" text="Heightmap" />
                                        <MenuItem mnemonicParsing="false" text="Holemap" />
                                    </items>
                                </Menu>
                            </items>
                        </Menu>
                    </items>
                </ContextMenu>
            </contextMenu>
        </ListView>
    </children>
</VBox>
